<h1>お使いリスト:<%= @errand.name %></h1>
<ol>
  <% @errand.tasks.each do |task| %>
    <li>
      <%= task.name %>
      <%= link_to '詳細', task_path(task) %>
      <%= link_to '編集', edit_task_path(task) %>
      <%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' }  %>
    </li>
  <% end %>
</ol>
<%= link_to '新しいタスク', new_task_path(task: {errand_id: @errand.id}) %>
<%= link_to 'リストの一覧', errands_path %>
